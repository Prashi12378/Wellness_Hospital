generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  username      String?   @unique
  accounts      Account[]
  ledgers       Ledger[]
  profile       Profile?
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Profile {
  id                    String         @id @default(cuid())
  userId                String         @unique
  email                 String         @unique
  firstName             String?
  lastName              String?
  phone                 String?
  role                  UserRole       @default(patient)
  specialization        String?
  qualifications        String?
  experience            Int?
  consultationFee       Decimal?
  bio                   String?
  availableTimings      Json?
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  dob                   String?
  gender                String?
  uhid                  String?        @unique
  admissionsAsDoctor    Admission[]    @relation("AdmissionDoctor")
  admissions            Admission[]    @relation("PatientAdmissions")
  appointmentsAsDoctor  Appointment[]  @relation("DoctorAppointments")
  appointmentsAsPatient Appointment[]  @relation("PatientAppointments")
  labRequests           LabRequest[]   @relation("PatientLabRequests")
  prescriptionsWritten  Prescription[] @relation("DoctorPrescriptions")
  prescriptionsReceived Prescription[] @relation("PatientPrescriptions")
  user                  User           @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Appointment {
  id              String           @id @default(uuid())
  patientId       String
  doctorId        String?
  patientName     String?
  patientPhone    String?
  patientEmail    String?
  appointmentDate DateTime
  appointmentTime String
  status          String           @default("scheduled")
  reason          String?
  department      String?
  type            String?          @default("General")
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  doctor          Profile?         @relation("DoctorAppointments", fields: [doctorId], references: [id])
  patient         Profile          @relation("PatientAppointments", fields: [patientId], references: [id])
  HospitalCharge  HospitalCharge[]
  Invoice         Invoice[]
  prescription    Prescription?
}

model Prescription {
  id              String      @id @default(uuid())
  appointmentId   String      @unique
  doctorId        String
  patientId       String
  doctorName      String
  medicines       Json
  additionalNotes String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  date            DateTime    @default(now())
  appointment     Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  doctor          Profile     @relation("DoctorPrescriptions", fields: [doctorId], references: [id])
  patient         Profile     @relation("PatientPrescriptions", fields: [patientId], references: [id])
}

model HealthPackage {
  id            String            @id @default(uuid())
  name          String
  description   String?
  price         Decimal
  originalPrice Decimal
  includes      Json
  icon          String            @default("Stethoscope")
  popular       Boolean           @default(false)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  type          HealthPackageType @default(GENERAL)
}

model Otp {
  id        String   @id @default(cuid())
  phone     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PharmacyInventory {
  id               String    @id @default(cuid())
  name             String
  batchNo          String?   @map("batch_no")
  expiryDate       DateTime? @map("expiry_date")
  price            Decimal
  stock            Int
  location         String?
  autoReorderPoint Int?      @default(10)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  gstRate          Decimal   @default(0) @map("gst_rate")
  hsnCode          String?   @map("hsn_code")
}

model Ledger {
  id              String   @id @default(uuid())
  transactionType String
  category        String
  description     String
  amount          Decimal
  paymentMethod   String
  transactionDate DateTime
  recordedBy      String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [recordedBy], references: [id], onDelete: Cascade)
}

model Invoice {
  id             String        @id @default(cuid())
  billNo         String        @unique
  date           DateTime      @default(now())
  patientName    String
  patientPhone   String?
  doctorName     String?
  insuranceNo    String?
  gstin          String        @default("29JNVPS4919B2Z5")
  subTotal       Decimal
  totalGst       Decimal
  grandTotal     Decimal
  paymentMethod  String        @default("CASH")
  status         String        @default("PAID")
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  discountAmount Decimal       @default(0)
  discountRate   Decimal       @default(0)
  admissionId    String?
  appointmentId  String?
  admission      Admission?    @relation(fields: [admissionId], references: [id])
  appointment    Appointment?  @relation(fields: [appointmentId], references: [id])
  items          InvoiceItem[]
}

model InvoiceItem {
  id         String    @id @default(cuid())
  invoiceId  String
  medicineId String
  name       String
  hsnCode    String?
  batchNo    String?
  expiryDate DateTime?
  qty        Int
  mrp        Decimal
  gstRate    Decimal
  amount     Decimal
  invoice    Invoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String
  type      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PharmacySettings {
  id             String   @id @default("default")
  defaultGstRate Decimal  @default(5)
  updatedAt      DateTime @updatedAt
}

model Admission {
  id                  String           @id @default(cuid())
  patientId           String
  admissionDate       DateTime         @default(now())
  dischargeDate       DateTime?
  status              String           @default("admitted")
  bedNumber           String?
  ward                String?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  doctorId            String?
  diagnoses           String?
  dischargeAdvice     String?
  dischargeCondition  String?
  dischargeMedication String?
  hospitalCourse      String?
  investigations      String?
  noteAndReview       String?
  physicalFindings    String?
  presentingSymptoms  String?
  doctorDesignation   String?
  primaryDoctor       Profile?         @relation("AdmissionDoctor", fields: [doctorId], references: [id])
  patient             Profile          @relation("PatientAdmissions", fields: [patientId], references: [id])
  ClinicalNote        ClinicalNote[]
  HospitalCharge      HospitalCharge[]
  pharmacyInvoices    Invoice[]
  LabRecord           LabRecord[]
  Surgery             Surgery[]
}

model ClinicalNote {
  id          String    @id @default(cuid())
  admissionId String
  doctorName  String
  note        String
  type        String    @default("suggestion")
  fileUrl     String?
  createdAt   DateTime  @default(now())
  Admission   Admission @relation(fields: [admissionId], references: [id], onDelete: Cascade)
}

model HospitalCharge {
  id            String       @id @default(cuid())
  admissionId   String?
  description   String
  amount        Decimal
  type          String
  date          DateTime     @default(now())
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  appointmentId String?
  Admission     Admission?   @relation(fields: [admissionId], references: [id], onDelete: Cascade)
  appointment   Appointment? @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
}

model LabRecord {
  id          String    @id @default(cuid())
  admissionId String
  testName    String
  result      String?
  fileUrl     String?
  recordedAt  DateTime  @default(now())
  Admission   Admission @relation(fields: [admissionId], references: [id], onDelete: Cascade)
}

model LabRequest {
  id              String   @id @default(uuid())
  patientId       String
  patientName     String
  testName        String
  priority        String   @default("normal")
  status          String   @default("pending")
  result          String?
  reportUrl       String?
  requestedById   String?
  requestedByName String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  department      String   @default("General")
  parameters      Json?
  consultantName  String?
  technicianName  String?
  patient         Profile  @relation("PatientLabRequests", fields: [patientId], references: [id])
}

model Surgery {
  id          String    @id @default(cuid())
  admissionId String
  surgeryName String
  surgeonName String
  surgeryDate DateTime
  notes       String?
  createdAt   DateTime  @default(now())
  Admission   Admission @relation(fields: [admissionId], references: [id], onDelete: Cascade)
}

model AmbulanceRequest {
  id          String   @id @default(cuid())
  patientName String
  phone       String
  location    String
  serviceType String
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BloodCollectionRequest {
  id             String   @id @default(cuid())
  patientName    String
  phone          String
  address        String
  collectionDate String
  collectionTime String
  selectedTests  Json
  totalPrice     Decimal
  status         String   @default("pending")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  firstName String
  lastName  String?
  email     String
  subject   String?
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum HealthPackageType {
  GENERAL
  BLOOD_COLLECTION
}

enum UserRole {
  admin
  doctor
  staff
  patient
  lab
}
