
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- NextAuth.js Models ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?   // Added for Credentials Auth
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Custom Relation to our App Profile
  profile       Profile?
  ledgers       Ledger[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Wellness App Models ---

enum UserRole {
  admin
  doctor
  staff
  patient
}

model Profile {
  id              String   @id @default(cuid())
  userId          String   @unique // Link to NextAuth User
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  email           String   @unique
  firstName       String?
  lastName        String?
  phone           String?
  role            UserRole @default(patient)
  uhid            String?  @unique
  dob             String?
  gender          String?
  
  // Doctor Specifics
  specialization  String?
  qualifications  String?
  experience      Int?
  consultationFee Decimal?
  bio             String?  @db.Text
  availableTimings Json?   // JSONB for flexible schedule
  
  // Relations
  appointmentsAsDoctor  Appointment[]  @relation("DoctorAppointments")
  appointmentsAsPatient Appointment[]  @relation("PatientAppointments")
  prescriptionsWritten  Prescription[] @relation("DoctorPrescriptions")
  prescriptionsReceived Prescription[] @relation("PatientPrescriptions")
  admissions            Admission[]    @relation("PatientAdmissions")
  admissionsAsDoctor    Admission[]    @relation("AdmissionDoctor")
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Admission {
  id              String   @id @default(uuid())
  patientId       String
  patient         Profile  @relation("PatientAdmissions", fields: [patientId], references: [id])
  
  admissionDate   DateTime @default(now())
  dischargeDate   DateTime?
  status          String   @default("admitted") // admitted, discharged
  
  bedNumber       String?
  ward            String?
  
  doctorId        String?
  primaryDoctor   Profile?  @relation("AdmissionDoctor", fields: [doctorId], references: [id])
  
  charges         HospitalCharge[]
  labRecords      LabRecord[]
  surgeries       Surgery[]
  clinicalNotes   ClinicalNote[]
  pharmacyInvoices Invoice[]

  // Discharge Summary Fields
  diagnoses           String?   @db.Text
  presentingSymptoms  String?   @db.Text
  physicalFindings    String?   @db.Text
  investigations      String?   @db.Text
  hospitalCourse      String?   @db.Text
  dischargeMedication String?   @db.Text
  dischargeCondition  String?
  dischargeAdvice     String?   @db.Text
  noteAndReview       String?   @db.Text
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model HospitalCharge {
  id              String   @id @default(uuid())
  admissionId     String
  admission       Admission @relation(fields: [admissionId], references: [id], onDelete: Cascade)
  
  description     String
  amount          Decimal
  type            String   // e.g., 'bed', 'nursing', 'operating_theatre', 'other', 'medicine'
  
  date            DateTime @default(now())
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model LabRecord {
  id            String    @id @default(uuid())
  admissionId   String
  admission     Admission @relation(fields: [admissionId], references: [id], onDelete: Cascade)
  testName      String
  result        String?
  fileUrl       String?   // For uploaded reports
  recordedAt    DateTime  @default(now())
}

model Surgery {
  id            String    @id @default(uuid())
  admissionId   String
  admission     Admission @relation(fields: [admissionId], references: [id], onDelete: Cascade)
  surgeryName   String
  surgeonName   String
  surgeryDate   DateTime
  notes         String?   @db.Text
  createdAt     DateTime  @default(now())
}

model ClinicalNote {
  id            String    @id @default(uuid())
  admissionId   String
  admission     Admission @relation(fields: [admissionId], references: [id], onDelete: Cascade)
  doctorName    String
  note          String    @db.Text
  type          String    @default("suggestion") // suggestion, daily_note, instruction
  fileUrl       String?   // For suggestion files/reports
  createdAt     DateTime  @default(now())
}

model Appointment {
  id              String   @id @default(uuid())
  
  patientId       String
  patient         Profile  @relation("PatientAppointments", fields: [patientId], references: [id])
  
  doctorId        String?
  doctor          Profile? @relation("DoctorAppointments", fields: [doctorId], references: [id])
  
  // Snapshot details in case profile changes
  patientName     String?
  patientPhone    String?
  patientEmail    String?
  
  appointmentDate DateTime
  appointmentTime String   // e.g., "10:30 AM"
  status          String   @default("scheduled") // scheduled, completed, cancelled
  reason          String?
  department      String?
  type            String?  @default("General")
  
  prescription    Prescription?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Prescription {
  id              String   @id @default(uuid())
  
  appointmentId   String   @unique
  appointment     Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  
  doctorId        String
  doctor          Profile  @relation("DoctorPrescriptions", fields: [doctorId], references: [id])
  
  patientId       String
  patient         Profile  @relation("PatientPrescriptions", fields: [patientId], references: [id])
  
  doctorName      String
  medicines       Json     // JSON array of medicine objects
  additionalNotes String?  @db.Text
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model HealthPackage {
  id            String            @id @default(uuid())
  name          String
  description   String?           @db.Text
  price         Decimal
  originalPrice Decimal
  includes      Json              // Array of strings
  icon          String            @default("Stethoscope")
  popular       Boolean           @default(false)
  type          HealthPackageType @default(GENERAL)
  
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}

enum HealthPackageType {
  GENERAL
  BLOOD_COLLECTION
}

model Otp {
  id        String   @id @default(cuid())
  phone     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PharmacyInventory {
  id               String    @id @default(uuid())
  name             String
  batchNo          String?   @map("batch_no")
  hsnCode          String?   @map("hsn_code")
  expiryDate       DateTime? @map("expiry_date")
  price            Decimal
  gstRate          Decimal   @default(0) @map("gst_rate")
  stock            Int
  location         String?
  autoReorderPoint Int?      @default(10)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Invoice {
  id               String        @id @default(uuid())
  billNo           String        @unique
  date             DateTime      @default(now())
  patientName      String
  patientPhone     String?
  doctorName       String?
  insuranceNo      String?
  gstin            String        @default("29JNVPS4919B2Z5")
  subTotal         Decimal
  totalGst         Decimal
  grandTotal       Decimal
  discountRate     Decimal       @default(0)
  discountAmount   Decimal       @default(0)
  paymentMethod    String        @default("CASH")
  status           String        @default("PAID")
  items            InvoiceItem[]
  admissionId      String?
  admission        Admission?    @relation(fields: [admissionId], references: [id])
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model InvoiceItem {
  id          String   @id @default(uuid())
  invoiceId   String
  medicineId  String
  name        String
  hsnCode     String?
  batchNo     String?
  expiryDate  DateTime?
  qty         Int
  mrp         Decimal
  gstRate     Decimal
  amount      Decimal
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model Ledger {
  id              String   @id @default(uuid())
  transactionType String
  category        String
  description     String
  amount          Decimal
  paymentMethod   String
  transactionDate DateTime
  recordedBy      String
  user            User     @relation(fields: [recordedBy], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  type      String   // e.g., 'low_stock', 'expiry', 'system'
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PharmacySettings {
  id             String   @id @default("default")
  defaultGstRate Decimal  @default(5)
  updatedAt      DateTime @updatedAt
}
