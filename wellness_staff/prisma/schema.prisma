
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- NextAuth.js Models ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?   // Added for Credentials Auth
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Custom Relation to our App Profile
  profile       Profile?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Wellness App Models ---

enum UserRole {
  admin
  doctor
  staff
  patient
}

model Profile {
  id              String   @id @default(cuid())
  userId          String   @unique // Link to NextAuth User
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  email           String   @unique
  firstName       String?
  lastName        String?
  phone           String?
  role            UserRole @default(patient)
  uhid            String?  @unique
  dob             String?
  gender          String?
  
  // Doctor Specifics
  specialization  String?
  qualifications  String?
  experience      Int?
  consultationFee Decimal?
  bio             String?  @db.Text
  availableTimings Json?   // JSONB for flexible schedule
  
  // Relations
  appointmentsAsDoctor  Appointment[] @relation("DoctorAppointments")
  appointmentsAsPatient Appointment[] @relation("PatientAppointments")
  prescriptionsWritten  Prescription[] @relation("DoctorPrescriptions")
  prescriptionsReceived Prescription[] @relation("PatientPrescriptions")
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Appointment {
  id              String   @id @default(uuid())
  
  patientId       String
  patient         Profile  @relation("PatientAppointments", fields: [patientId], references: [id])
  
  doctorId        String?
  doctor          Profile? @relation("DoctorAppointments", fields: [doctorId], references: [id])
  
  // Snapshot details in case profile changes
  patientName     String?
  patientPhone    String?
  patientEmail    String?
  
  appointmentDate DateTime
  appointmentTime String   // e.g., "10:30 AM"
  status          String   @default("scheduled") // scheduled, completed, cancelled
  reason          String?
  department      String?
  type            String?  @default("General")
  
  prescription    Prescription?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Prescription {
  id              String   @id @default(uuid())
  
  appointmentId   String   @unique
  appointment     Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  
  doctorId        String
  doctor          Profile  @relation("DoctorPrescriptions", fields: [doctorId], references: [id])
  
  patientId       String
  patient         Profile  @relation("PatientPrescriptions", fields: [patientId], references: [id])
  
  doctorName      String
  medicines       Json     // JSON array of medicine objects
  additionalNotes String?  @db.Text
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model HealthPackage {
  id            String   @id @default(uuid())
  name          String
  description   String?  @db.Text
  price         Decimal
  originalPrice Decimal
  includes      Json     // Array of strings
  icon          String   @default("Stethoscope")
  popular       Boolean  @default(false)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Otp {
  id        String   @id @default(cuid())
  phone     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}
